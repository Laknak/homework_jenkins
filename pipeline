pipeline {
    agent any

    stages {
        stage('1-EXECTION') {
            steps {
                sh 'chmod u+x hello.py'
                sh 'sudo apt install -y python3-pip'
                sh 'pip install -r requirements.txt'
                sh 'touch result.txt'
                sh './hello.py -n Vladislav >> result.txt'
            }
        }
        stage('2-ARCHIVEARTIFACT') {
            steps {
                archiveArtifacts artifacts: 'result.txt'
            }
        }
    }
}
