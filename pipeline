pipeline {
    agent {
      docker {
        image 'debian:bookworm-slim'
      }
    }
    stages {
        stage('1-EXECUTION') {
            steps {
                sh 'apt-get update'
                sh 'apt-get install -y python3-pip'
                sh 'apt-get install -y python3.11-venv'
                sh 'python3 -m venv my_venv'
                sh 'source my_venv/bin/activate'
                sh 'chmod u+x hello.py'
                sh 'pip install -r requirements.txt'
                sh 'touch result.txt'
                sh './hello.py -n Vladislav >> result.txt'
            }
        }
        stage('2-ARCHIVEARTIFACT') {
            steps {
                archiveArtifacts artifacts: 'result.txt'
            }
        }
    }
}
